<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/checkers_panel">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/board"

        android:rowCount="8"
        android:rowOrderPreserved="true"
        android:columnCount="8"
        android:columnOrderPreserved="true"
        android:orientation="horizontal"

        app:layout_constraintLeft_toLeftOf="@id/checkers_panel"
        app:layout_constraintRight_toRightOf="@id/checkers_panel"
        app:layout_constraintTop_toTopOf="@id/checkers_panel"
        app:layout_constraintBottom_toBottomOf="@id/checkers_panel">

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_1_icon"
        android:src="@drawable/ic_account_circle_black_36dp"
        android:contentDescription="@string/play_checkers"

        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/board"
        app:layout_constraintLeft_toRightOf="@+id/player_1_left_indicator"
        app:layout_constraintBottom_toBottomOf="@id/checkers_panel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow_right"
        android:id="@+id/player_1_left_indicator"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:visibility="invisible"

        android:layout_margin="8dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@id/player_1_icon"
        app:layout_constraintBottom_toBottomOf="@id/player_1_icon"
        app:layout_constraintLeft_toLeftOf="@id/checkers_panel"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow_left"
        android:id="@+id/player_1_right_indicator"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:visibility="invisible"

        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/player_1_icon"
        app:layout_constraintBottom_toBottomOf="@id/player_1_icon"
        app:layout_constraintLeft_toRightOf="@id/player_1_icon"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_2_icon"
        android:src="@drawable/ic_account_circle_black_36dp"
        android:contentDescription="@string/play_checkers"

        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/board"
        app:layout_constraintRight_toLeftOf="@+id/player_2_right_indicator"
        app:layout_constraintBottom_toBottomOf="@id/checkers_panel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow_right"
        android:id="@+id/player_2_left_indicator"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:visibility="invisible"

        android:layout_margin="8dp"
        app:layout_constraintRight_toLeftOf="@id/player_2_icon"
        app:layout_constraintTop_toTopOf="@id/player_2_icon"
        app:layout_constraintBottom_toBottomOf="@id/player_2_icon" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow_left"
        android:id="@+id/player_2_right_indicator"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:visibility="invisible"

        android:layout_margin="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@id/player_2_icon"
        app:layout_constraintRight_toRightOf="@id/checkers_panel"
        app:layout_constraintBottom_toBottomOf="@id/player_2_icon" />

</android.support.constraint.ConstraintLayout>