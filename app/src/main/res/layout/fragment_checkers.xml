<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/checkers_panel">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/board"

        android:rowCount="8"
        android:rowOrderPreserved="true"
        android:columnCount="8"
        android:columnOrderPreserved="true"
        android:orientation="horizontal"

        app:layout_constraintLeft_toLeftOf="@id/checkers_panel"
        app:layout_constraintRight_toRightOf="@id/checkers_panel"
        app:layout_constraintTop_toTopOf="@id/checkers_panel"
        app:layout_constraintBottom_toBottomOf="@id/checkers_panel">

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkers_turn_display"
        android:src="@drawable/ic_account_circle_black_36dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        app:layout_constraintLeft_toLeftOf="@id/checkers_panel"
        app:layout_constraintBottom_toBottomOf="@id/checkers_panel"
        app:layout_constraintTop_toBottomOf="@id/board"

        android:contentDescription="@string/play_checkers" />

</android.support.constraint.ConstraintLayout>